
<% content_for :content do %>

<div class="container">
  <div class="row">
    <h1>  <%= image_tag "logo.png", alt: "TPAGA", size: "250x60" %>  </h1>
  </div>
</div>
    
<div class="container">

	<% if !@error.nil? %>
		<div class="alert alert-danger" role="alert">Failed transaction!!</div>    
	<% else %>
		<div class="alert alert-success" role="alert">Well done! You get: <%= @description %> for <%= @amount %>, Charge id:  <%= @charge.id %></div>
	<% end %>


</div>
<% end %>